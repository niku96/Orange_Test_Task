@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

    @if (SignInManager.IsSignedIn(User))
    {
        <li>
            <a class="nav-link scrollto" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Salut @User.Identity.Name!</a>
        </li>
        <li>
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Ieșire</button>
            </form>
        </li>
    }
    else
    {
        <li>
            <a class="nav-link scrollto " asp-area="Identity" asp-page="/Account/Register">Înregistrare</a>
        </li>
        <li>
            <a class="nav-link scrollto " asp-area="Identity" asp-page="/Account/Login">Logare</a>
        </li>
    }

